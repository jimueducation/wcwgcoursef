
.hotnews_top{
		 width: 100%;
		 height: 22px;
		 display: -webkit-box;
		 display: -webkit-flex;
		 display: flex;
		 line-height: 22px;
		 padding-top: 7px;
		 padding-bottom: 10px;
		 position: relative;
		 margin-left: 10px;
		 margin-right: 10px;
}
.hotnews_top_left_img{
		 width: 22px;
		 height: 22px;
}
.hotnews_top_left_txt{
		 font-size: 16px;
		 height: 22px;
		 line-height: 22px;
		 font-weight: bold;
}
.hotnews_top_right{
		position: absolute;
		right: 5px;
		font-size: 12px;
		color: #999999;
}
.hotnews_bigbox{
 		width: 100%;
 		padding: 0px;
		margin: 0px;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-flex-wrap: wrap;
		        flex-wrap: wrap;
}
.hotnews_box{
 		width: 45%;
 		height: 150px;
		margin-left: 8px;
		margin-right: 8px;
/* 		border: 1px solid red; */
 		position: relative;
		margin-bottom: 10px;
}
.hotnews_img_box{
		position: relative;
		width: 100%;
		height: 80px;
}
.hotnews_img{
 		width: 100%;
 		height: 80px;
		border-radius: 3px;
}
.hotnews_icon{
		font-size: 14px;
		color: black;
		position: absolute;
		right: 5px;
		bottom: 5px;
		background-color: #555555;
		opacity: 0.7;
		border-radius: 4px;
		height: 20px;
		line-height: 20px;
		padding-left: 3px;
		padding-right: 3px;
}
.hotnews_hotstate{
		position: absolute;
		display: block;
		width: 30px;
		height: 25px;
		line-height: 25px;
		text-align: center;
		right: 0px;
		top: 0px;
		font-size: 12px;
		color: #FFFFFF;
		-webkit-transform: rotate(45deg);
		        transform: rotate(45deg);
		padding: 0px;
		margin: 0px;
}
.hotnews_state{
		font-size: 12px;
		display: inline-block;
		height: 18px;
		line-height: 18px;
		width: 45px;
		color: #FFFFFF;
		background-color: #00c3ee;
		border-radius: 2px;
		text-align: center;
}
.hotnews_title{
		width: 100%;
		font-size: 12px;
}
.hotnews_money1{
		font-size: 14px;
		width: 60px;
		text-align: center;
		color: #F0AD4E;
		display: inline-block;
}
.hotnews_money2{
		font-size: 12px;
		color: #FFFFFF;
		background-color: #C6AD77;
		border-radius: 10px;
		display: inline-block;
		padding-left: 2px;
		padding-right: 2px;
		text-align: center;
		margin-right: 5px;
		height: 24px;
		line-height: 24px;
}
.hotnews_num{
		display: inline-block;
		width: 30px;
		text-align: center;
		font-size: 14px;
		border-left: 1px solid #808080;
		color: #808080;
}
 
