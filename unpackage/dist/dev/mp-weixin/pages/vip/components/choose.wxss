
.choose_box{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 100%;
	height: 20px;
	line-height: 20px;
	padding-top: 5px;
	padding-bottom: 5px;
	box-shadow: 0px 3px 1px #F1F1F1;
}
.choose_left_txt{
	text-align: center;
	font-size: 16px;
	display: inline-block;
	height: 20px;
	line-height: 20px;
	vertical-align:middle;
}
.choose_right{
	border-left: 1px solid #999999;
	width: 50%;
	height: 20px;
	line-height: 20px;
	text-align: center;
}
.choose_left{
	width: 50%;
	height: 20px;
